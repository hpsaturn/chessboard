{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chess - SDL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/chess",
            "args": ["--sdl"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Chess - Chars",
            "type": "cppdbg", 
            "request": "launch",
            "program": "${workspaceFolder}/build/chess",
            "args": ["--chars"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing", 
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Chess - NCurses",
            "type": "cppdbg",
            "request": "launch", 
            "program": "${workspaceFolder}/build/chess",
            "args": ["--ncurses"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}
